# Firebase 설정
# Firebase Console에서 프로젝트 설정 > 일반 > 내 앱에서 확인 가능
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# OpenAI API 키
# https://platform.openai.com/api-keys 에서 생성
OPENAI_API_KEY=sk-your_openai_api_key_here

# 데이터 암호화 키 (32자 이상 랜덤 문자열)
# 터미널에서 생성: openssl rand -base64 32
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Firebase Admin (서버: 구독/토큰 검증)
# Firebase Console > 프로젝트 설정 > 서비스 계정 > 새 비공개 키 생성 > JSON 내용을 한 줄로
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Stripe (구독)
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
# Webhook 서명: stripe listen --forward-to localhost:3000/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxx
# 가격 ID (Stripe Dashboard > Products > 가격) - 클라이언트에서 Checkout 요청 시 사용
NEXT_PUBLIC_STRIPE_PRICE_BASIC=price_xxx
NEXT_PUBLIC_STRIPE_PRICE_PRO=price_xxx
STRIPE_PRICE_BASIC=price_xxx
STRIPE_PRICE_PRO=price_xxx
# Checkout 성공/취소 후 리다이렉트 URL (선택)
NEXT_PUBLIC_APP_URL=http://localhost:3000
